<% provide(:title, 'Resevation_sign_up') %>
<h1>予約日の登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @resevation, local: true) do |f| %>
      <%= f.label "宿泊開始日" %>
      <%= f.text_field :start_stay %>

      <%= f.label "宿泊終了日" %>
      <%= f.text_field :end_stay %>

<%= f.submit "Create resevation", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
