<p id="notice"><%= notice %></p>

<h1>部屋一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">部屋番号</th>
      <th scope="col">階数</th>
      <th scope="col">部屋のタイプ</th>
      <th scope="col">サイド</th>
      <th scope="col">喫煙可</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td scope="row"><%= room.number %></td>
        <td scope="row"><%= room.floor %></td>
        <td scope="row"><%= room.room_type %></td>
        <td scope="row"><%= room.side %></td>
        <td scope="row"><%= room.smoke %></td>
      </tr>
    <% end %>

  </tbody>
</table>


