<p id="notice"><%= notice %></p>

<h1>Customer Scaffolds</h1>

<table>
  <thead>
    <tr class="table">
      <th scope="col">Email</th>
      <th scope="col">Name first</th>
      <th scope="col">Name first kana</th>
      <th scope="col">Name last</th>
      <th scope="col">Name last</th>
      <th scope="col">Tel</th>
      <th scope="col">Placeholder</th>
      <th scope="col">Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_scaffolds.each do |customer_scaffold| %>
      <tr>
        <td scope="row"><%= customer_scaffold.email %></td>
        <td scope="row"><%= customer_scaffold.first_name %></td>
        <td scope="row"><%= customer_scaffold.first_name_kana %></td>
        <td scope="row"><%= customer_scaffold.last_name %></td>
        <td scope="row"><%= customer_scaffold.last_name_kana %></td>
        <td scope="row"><%= customer_scaffold.tel %></td>
        <td scope="row"><%= customer_scaffold.placeholder %></td>
        <td scope="row"><%= customer_scaffold.birthday %></td>
        <td><%= link_to 'Show', customer_scaffold , class: "btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_customer_scaffold_path(customer_scaffold), class: "btn btn-raised btn-default"%></td>
        <td><%= link_to 'Destroy', customer_scaffold, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-raised btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer Scaffold', new_customer_scaffold_path, class: 'btn btn-raised btn-primary' %>
