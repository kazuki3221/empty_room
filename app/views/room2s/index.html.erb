<p id="notice"><%= notice %></p>

<h1>Room2s</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Floor</th>
      <th scope="col">Room type</th>
      <th scope="col">Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room2s.each do |room2| %>
      <tr>
        <td scope="row"><%= room2.number %></td>
        <td scope="row"><%= room2.floor %></td>
        <td scope="row"><%= room2.room_type %></td>
        <td scope="row"><%= room2.price %></td>
        <td><%= link_to 'Show', room2 ,class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_room2_path(room2) , class: "btn btn-raised btn-default" %></td>
        <td><%= link_to 'Destroy', room2, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-raised btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room2', new_room2_path , class: 'btn btn-raised btn-primary' %>
