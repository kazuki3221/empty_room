<p id="notice"><%= notice %></p>

<h1>Scaffold Sales</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Start stay</th>
      <th scope="col">End stay</th>
      <th scope="col">Customer scaffold</th>
      <th scope="col">Room2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scaffold_sales.each do |scaffold_sale| %>
      <tr>
        <td scope="row"><%= scaffold_sale.start_stay %></td>
        <td scope="row"><%= scaffold_sale.end_stay %></td>
        <td scope="row"><%= scaffold_sale.customer_scaffold_id %></td>
        <td scope="row"><%= scaffold_sale.room2_id %></td>
        <td><%= link_to 'Show', scaffold_sale , class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_scaffold_sale_path(scaffold_sale) , class: "btn btn-raised btn-default" %></td>
        <td><%= link_to 'Destroy', scaffold_sale, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-raised btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scaffold Sale', new_scaffold_sale_path , class: 'btn btn-raised btn-primary' %>
