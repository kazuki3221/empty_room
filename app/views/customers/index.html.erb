<p id="notice"><%= notice %></p>

<h1>お客様一覧</h1>

<table>
  <thead>
    <tr class="table">
      <th scope="col">Email</th>
      <th scope="col">Company</th>
      <th scope="col">Last name</th>
      <th scope="col">Last name kana</th>
      <th scope="col">First name</th>
      <th scope="col">First name kana</th>
      <th scope="col">Tel</th>
      <th scope="col">Placeholder</th>
      <th scope="col">Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td scope="row"><%= customer.email %></td>
        <td scope="row"><%= customer.company %></td>
        <td scope="row"><%= customer.last_name %></td>
        <td scope="row"><%= customer.last_name_kana %></td>
        <td scope="row"><%= customer.first_name %></td>
        <td scope="row"><%= customer.first_name_kana %></td>
        <td scope="row"><%= customer.tel %></td>
        <td scope="row"><%= customer.placeholder %></td>
        <td scope="row"><%= customer.birthday %></td>
        <td><%= link_to 'Show', customer , class: "btn btn-outline-primary"%></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) , class: "btn btn-raised btn-default" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-raised btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

